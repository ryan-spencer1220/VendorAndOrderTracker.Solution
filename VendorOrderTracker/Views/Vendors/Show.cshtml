@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h3>All Orders:</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.InvoiceNumber</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add New Order</a></p>
<p><a href='/vendors'>Return To Vendors</a></p>
<p><a href='/'>Home</a></p>