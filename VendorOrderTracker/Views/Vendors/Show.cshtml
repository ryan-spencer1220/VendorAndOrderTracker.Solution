@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h3>All Orders:</h3>

@foreach (Vendor vendor in Model)
{
  <h3>@vendor.Name</h3>
  <h3>@vendor.Description</h3>
  <h3>@vendor.PhoneNumber</h3>
}

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
}
</ol>