@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h3>All Orders:</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.InvoiceNumber</a></li>
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Total</a></li>
}
</ol>

<p><a href='/categories/@Model["category"].Id/items/new'>Add a new item</a></p>
<p><a href='/categories'>Return to category list</a></p>
<p><a href='/'>Home</a></p>